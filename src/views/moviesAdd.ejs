<!DOCTYPE html>
<html lang="es">

<%- include('partials/head',{
    title: 'Crear una pelicula'
}) %>

<body>
    <%- include('partials/header') %>
    <div class="container mt-5">
        <h1>Crear una pelicula</h1>
        <hr>
        <form class="row g-3" action="/movies/create" enctype="multipart/form-data" method="POST">
            <div class="col-md-12">
              <label for="title" class="form-label">Titulo</label>
              <input type="text" class="form-control"  name="title" id="title">
            </div>
            <div class="col-md-4">
              <label for="rating" class="form-label">Rating</label>
              <input type="number" class="form-control" name="rating" id="rating">
            </div>
            <div class="col-md-4">
                <label for="awards" class="form-label">Premios</label>
                <input type="number" class="form-control"  name="awards" id="awards">
              </div>
            <div class="col-md-4">
              <label for="release_date" class="form-label">Fecha de lanzamiento</label>
              <input type="date" class="form-control" name="release_date" id="release_date">
            </div>
            <div class="col-md-4">
              <label for="length" class="form-label">Duraci√≥n</label>
              <input type="number" class="form-control" name="length" id="length">
            </div>
            <div class="col-md-4">
              <label for="inputState" class="form-label">Seleccionar el genero</label>
              <select id="inputState" name="genre_id" class="form-select">
                <option value="" disabled selected hidden>Seleccionar genero</option>
                <% genres.forEach(genre => { %>
                <option value="<%= genre.id %>"><%= genre.name %></option>
                <% }); %>
              </select>
            </div>
            <div class="col-md-4">
              <label for="image" class="form-label">Portada de pelicula</label>
              <input type="file" class="form-control" name="image" id="image">
            </div>
            <h3>Seleccionar Actor/Actores</h3>
            <hr>
            <div class="mb-3 d-flex g-4 row col-12">
                <% actors.forEach(actor => { %>
                    <div class="col-12 col-md-3 col-lg-2">
                        <div class="form-check">
                            <input class="form-check-input" name="actors" type="checkbox" value="<%= actor.id %>" id="actor<%= actor.id %>">
                            <label class="form-check-label" for="actor<%= actor.id %>">
                              <%= actor.first_name %> <%= actor.last_name %>
                            </label>
                          </div>
                    </div>
                <% }) %>
            </div>
            <div class="col-12 mb-5 flex-row-reverse d-flex">
                <button type="submit" class="btn btn-primary">Crear producto</button>
              </div>
          </form>
    </div> 
</body>
</html>