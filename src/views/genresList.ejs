<!DOCTYPE html>
<%- include('partials/head',{
    title: 'Lista de peliculas'
}) %>
<body>
<%- include('partials/header') %>
    <div class="container col-lg-8 m-auto">
    <div class="d-flex justify-content-between mt-3 mb-3 align-items-center">
        <h1>LISTADO DE GENEROS</h1>
        <a href="/movies/create">
            <button class="btn btn-lg btn-primary">
                Agregar un genero
            </button>
        </a>
    </div>
    <table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre</th>
            <th scope="col">Ranking</th>
            <th scope="col">Activo</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        <% genres.forEach(genre=> { %>
            <tr>
                <th scope="row">
                    <%= genre.id %>
                </th>
                <td>
                    <%= genre.name %>
                </td>
                <td>
                    <%= genre.ranking %>
                </td>
                <td>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" <%= genre.active && 'checked' %> id="">
                      </div>
                </td>
                <td>
                    <div class="d-flex gap-2">
                        <a href="/genres/detail/<%= genre.id %>">
                            <button class="btn btn-secondary">
                                <i class="fas fa-eye"></i>
                            </button>
                        </a>
                        <a href="/genres/edit/<%= genre.id %>">
                            <button class="btn btn-success">
                                <i class="fas fa-edit"></i>
                            </button>
                        </a>
                        <a href="/genres/delete/<%= genre.id %>">
                            <button class="btn btn-danger">
                                <i class="fas fa-trash"></i>
                            </button>
                        </a>
                    </div>
                </td>
            <% }) %>
            </tr>
        </tbody>
    </table>
    </div>
</body>

</html>